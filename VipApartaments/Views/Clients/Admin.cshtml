@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Admin Panel</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="wrap">
						<div class="img" style="background-image: url(images/bg-1.jpg);"></div>
						<div class="login-wrap p-4 p-md-5">
			      	<div class="d-flex">
			      		<div class="w-100">
			      			<h3 class="mb-4">Zaloguj się na konto służbowe</h3>
			      		
							<form asp-action="Admin" method="POST">
			      		<div class="form-group mt-3">
			      			<input type="text" class="form-control" name="UserName" id="UserNAme"  required>
			      			<label class="form-control-placeholder" name="UserName" id="UserName"  for="Email">Login</label>
			      		</div>
		            <div class="form-group">
		              <input id="password-field" type="password"  name="Pass" id="Pass"  class="form-control" required>
		              <label class="form-control-placeholder"   for="Pass">Hasło</label>
		              
		            </div>
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
		            </div>
		          
		          
		          </form>
				  @if (ViewData["Message"] != null)
							 {
							<div class="alert alert-primary">
							 @ViewData["Message"]
							 </div>
							 }
		          <p class="text-center">Jesteś klientem? <a asp-controller="Clients" asp-action="Admin">Zaloguj się  </a></p>
		        </div>
		      </div>
				</div>
			</div>
		</div>
	</section>